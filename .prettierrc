{
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrderParserPlugins": ["typescript", "decorators-legacy"],
    "importOrder": ["^@c/(.*)$", "^@api/(.*)$", "^@/(.*)$", "^[./]"],
    "importOrderSortSpecifiers": true,
    "importOrderGroupNamespaceSpecifiers": true
}
