---
import RoundRectBox from "./RoundRectBox";

const { project } = Astro.props;
---

<RoundRectBox className="w-fit mx-auto" lineColor="#0000" client:load>
  <article
    class="bg-slate-800 rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-[1.02] hover:shadow-xl"
  >
    <div class="h-48 overflow-hidden">
      <img
        src={project.image}
        alt={project.title}
        class="w-full h-full object-cover"
      />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
      <p class="text-slate-300 mb-4">{project.description}</p>
      <div class="flex flex-wrap gap-2 mb-4">
        {
          project.tags.map((tag: string) => (
            <span class="bg-slate-700 text-slate-200 text-xs px-2 py-1 rounded">
              {tag}
            </span>
          ))
        }
      </div>
      <div class="flex justify-between mt-4">
        <a
          href={project.liveUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-indigo-400 hover:text-indigo-300 font-medium text-sm flex items-center"
        >
          Live Demo
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 ml-1"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
        <a
          href={project.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-slate-400 hover:text-slate-300 text-sm flex items-center"
        >
          View Code
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 ml-1"
            fill="currentColor"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </article>
</RoundRectBox>
